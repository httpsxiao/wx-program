/* template/mes-template/mes-template.wxss */
.mes-container {
  display: flex;
  flex-direction: column;
  color: #626262;
  background: #fff;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.header text {
  font-size: 32rpx;
}
.header .name {
  font-size: 46rpx;
  color: #000;
}

.footer {
  height: 120rpx;
  font-size: 28rpx;
}