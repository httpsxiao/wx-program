@import "../../template/panel-template/panel-template.wxss";

.search {
  display: flex;
  flex-direction: row;
  width: 94%;
  height: 80rpx;
  color: #fff;
  background-color: #a5dca2;
  margin: 20rpx auto;
  border-radius: 40rpx;
}
.search-icon {
  margin: auto 40rpx auto 0;
}

.placeholder {
  font-size: 14px;
  color: #f5f5f5;
  margin-left: 20rpx;
}

.search input {
  width: 620rpx;
  height: 100%;
  font-size: 28rpx;
  margin-left: 20px;
}

.search-panel {
  position: absolute;
  top: 80rpx;
}

.no-search-panel {
  position: absolute;
  width: 100%;
  top: 80rpx;
  text-align: center;
  padding-top: 300rpx;
}

.no-search-panel text {
  font-size: 40rpx;
  color: #a5dca2;
}
